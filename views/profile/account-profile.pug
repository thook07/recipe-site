extends ../profile/layout-profile

//- Override default config variables
append config
  - var pageTitleTemplate = 'page-title-dark'
  - var isPageTitle = true
  - var isToolbar = true
  - var pageTitle = 'Profile info'
  - var parentMenu = 'Account'
  - var breadcrumbs = [{'title': 'Account', 'link': '#'}, {'title': 'Profile info'}]

//- Page Content
block content

  .container.pb-5.mb-2.mb-md-3
    .row

      // Sidebar
      aside.col-lg-4.pt-4.pt-lg-0
        //- sidebar-account.pug template
        include ../profile/sidebar-account

      // Content  
      section.col-lg-8

        // Toolbar
        .d-none.d-lg-flex.justify-content-between.align-items-center.pt-lg-3.pb-4.pb-lg-5.mb-lg-3
          h6.font-size-base.text-light.mb-0 Update your profile details below:
          a(href='/logout').btn.btn-primary.btn-sm
            i.czi-sign-out.mr-2
            | Sign out
        
        // Profile form
        form
          .bg-secondary.rounded-lg.p-4.mb-4
            .media.align-items-center
              img(src='/img/marketplace/account/avatar.png' width='90' alt='Susan Gardner')
              .media-body.pl-3
                //button(type='button').btn.btn-light.btn-shadow.btn-sm.mb-2
                  i.czi-loading.mr-2
                  | Change avatar
                //.p.mb-0.font-size-ms.text-muted Upload JPG, GIF or PNG image. 300 x 300 required.
          .row
            .col-lg-12
              .form-group
                label(for='account-email') Email Address
                input(type='email' id='account-email' value=user.email).form-control
              .form-group
                label(for='account-phone') Role
                input(type='text' id='account-role' value=user.role required readonly).form-control
              .form-group
                label(for='account-pass') New Password
                .password-toggle
                  input(type='password' id='account-pass').form-control
                  label.password-toggle-btn
                    input(type="checkbox").custom-control-input
                    i.czi-eye.password-toggle-indicator
                    span.sr-only Show password
              .form-group
                label(for='account-confirm-pass') Confirm Password
                .password-toggle
                  input(type='password' id='account-confirm-pass').form-control
                  label.password-toggle-btn
                    input(type="checkbox").custom-control-input
                    i.czi-eye.password-toggle-indicator
                    span.sr-only Show password
            .col-12
              hr.mt-2.mb-3
              .d-flex.flex-wrap.justify-content-between.align-items-center
                .custom-control.custom-checkbox.d-block
                  //input(type='checkbox' id='subscribe_me' checked).custom-control-input
                  //label(for='subscribe_me').custom-control-label Subscribe me to Newsletter
                button(type='button' class='btn btn-primary mt-3 mt-sm-0') Update profile
