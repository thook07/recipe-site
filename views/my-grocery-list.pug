extends recipe-partials/layout-grocery

//- Override default config variables
append config
  - var pageTitle = 'Grocery - Checkout'
  - var parentMenu = 'Home'
  - var breadcrumbs = [{'title': 'Checkout'}]
  
//- Page Content
block content

  // Checkout form
  form
    .row.no-gutters
      .col-xl-12
        h1.h2.mb-4 Checkout
        
    .row.no-gutters.pb-5.mb-xl-3

      // Delivery details
      .col-xl-7.mb-3
        h2.h5.mb-4 Shopping List 
        ul.list-group
          each value, key in ingredientsMap
            li.list-group-item
              | #{key} - #{value}

      // Order summary + payment
      .col-xl-4.offset-xl-1.mb-3
        .bg-light.rounded-lg.py-5.px-4.px-sm-5
          h2.h5.pb-3 Your Recipe List
          each recipe in recipes
            .media.align-items-center.pb-2.border-bottom
              a(href='#').d-block.mr-2
                image(src=recipe.images[0], 'Product')(width='64')
              .media-body
                h6.widget-product-title
                  a(href='grocery-single.html') #{recipe.name}
                .widget-product-meta
                  span.text-accent.mr-2
                    | $15.
                    small 00
                  span.text-muted x 1