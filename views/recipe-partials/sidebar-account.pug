//- Account sidebar
.cz-sidebar-static.rounded-lg.box-shadow-lg.px-0.pb-0.mb-5.mb-lg-0
  .px-4.mb-4
    .media.align-items-center
      .img-thumbnail.rounded-circle.position-relative(style='width: 6.375rem;')
        span(data-toggle='tooltip' title='Reward points').badge.badge-warning 384
        img(src='/img/shop/account/avatar.jpg' alt='Susan Gardner').rounded-circle
      .media-body.pl-3
        if user
          h3.font-size-base.mb-0 
          span.text-accent.font-size-sm #{user.email}
        else 
          h3.font-size-base.mb-0 Susan Gardner
          span.text-accent.font-size-sm #{user.email}
  .bg-secondary.px-4.py-3
    h3.font-size-sm.mb-0.text-muted Dashboard
  ul.list-unstyled.mb-0
    li.border-bottom.mb-0
      a(href='/profile/my-recipes')&attributes(pageTitle === 'My Recipes' ? {'class': 'nav-link-style d-flex align-items-center px-4 py-3 active'} : {'class': 'nav-link-style d-flex align-items-center px-4 py-3'})
        i.czi-wallet.opacity-60.mr-2
        | My Recipes
        span.font-size-sm.text-muted.ml-auto 1
    li.mb-0
      a(href='/profile/my-favorites')&attributes(pageTitle === 'My Favorites' ? {'class': 'nav-link-style d-flex align-items-center px-4 py-3 active'} : {'class': 'nav-link-style d-flex align-items-center px-4 py-3'})
        i.czi-heart.opacity-60.mr-2
        | My Favorites
        span.font-size-sm.text-muted.ml-auto 3
  .bg-secondary.px-4.py-3
    h3.font-size-sm.mb-0.text-muted Account settings
  ul.list-unstyled.mb-0
    li.border-bottom.mb-0
      a(href='/profile')&attributes(pageTitle === 'Profile info' ? {'class': 'nav-link-style d-flex align-items-center px-4 py-3 active'} : {'class': 'nav-link-style d-flex align-items-center px-4 py-3'})
        i.czi-user.opacity-60.mr-2
        | Profile info
    //li.border-bottom.mb-0
      a(href='account-address.html')&attributes(pageTitle === 'My addresses' ? {'class': 'nav-link-style d-flex align-items-center px-4 py-3 active'} : {'class': 'nav-link-style d-flex align-items-center px-4 py-3'})
        i.czi-location.opacity-60.mr-2
        | Addresses
    //li.mb-0
      a(href='account-payment.html')&attributes(pageTitle === 'My payment methods' ? {'class': 'nav-link-style d-flex align-items-center px-4 py-3 active'} : {'class': 'nav-link-style d-flex align-items-center px-4 py-3'})
        i.czi-card.opacity-60.mr-2
        | Payment methods
    li.mb-0
      a(href='/logout').nav-link-style.d-flex.align-items-center.px-4.py-3
        i.czi-sign-out.opacity-60.mr-2
        | Sign out
