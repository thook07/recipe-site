extends ../recipe-partials/layout-admin

//- Override default config variables
append config
	- var isPageTitle = false
	- var pageTitle = 'Add Recipe'
	- var parentMenu = 'Account'
	- var navbarTemplate = 'navbar-marketplace'
	- var footerTemplate = 'footer-marketplace'
	- var isFileUploadScript = true
	- var isCardScript = false
	- var isChartScript = true 
	- var isCodeHighlighting = true 
append scripts
	script(src='/js/recipes/add-recipe.js')

//- Page Content
block content

	//- dashboard-header.pug template
	//include partials/dashboard-header

	.mb-5.pb-3
		.box-shadow-lg.rounded-lg.overflow-hidden
			.row

				// Sidebar
				aside.col-lg-2
					//- sidebar-dashboard.pug template
					include ../recipe-partials/sidebar-admin

				// Content
				section(style='padding-right: 2.5rem !important').col-lg-10.p-2
					.row.p-1.pt-3
						.col-lg-8
								h3 #{pageTitle}
						.col-lg-4.d-flex.justify-content-end
								//input(type="text", id="q", placeholder="Filter..." value=q).form-control.ml-2
								//button(type="button").btn.btn-primary.btn-icon.ml-2#filterBtn
										i.czi-rocket.mr-2
										| Go
					.row
						.col-lg-12.p-1
							form(novalidate).needs-validation#cr-form.p-3
								//Recipe Name
								.form-group.pb-2
									label(for='cr-recipe-name').font-weight-medium Recipe name
									.input-group
										.input-group-prepend
											a(id="recipe-id-placeholder" data-toggle="tooltip", data-placement="top", title="RecipeId will show here").input-group-text
												i.czi-broccoli
										input(type='text' name="cr-recipe-name" placeholder="Enter Recipe Name Here.." required)#cr-recipe-name.form-control
									small.form-text.text-muted Maximum 100 characters.
									.invalid-feedback
										| Name is required
								//Recipe URL (when completed)
								.form-group.pb-2.d-none
									label(for='cr-recipe-id').font-weight-medium recipeId
									input(type='text' name="cr-recipe-id" readonly)#cr-recipe-id.form-control
									small.form-text.text-muted Id is autogenerated
								//Ingredients
								.form-group.py-2
									label(for='cr-recipe-ingredients').font-weight-medium Ingredients
									textarea(rows='6' name="cr-recipe-ingredients" placeholder='Enter the ingredients...\n1 cup - applesauce\n1 slice - gluten-free bread' required)#cr-recipe-ingredients.form-control
									.invalid-feedback
										| Parsing Ingredients Failed!
									.bg-secondary.p-3.font-size-ms.rounded-bottom
										span.d-inline-block.font-weight-medium.mr-2.my-1 Seperate the amount of the ingredient using a hyphen "-"
										em.d-inline-block.border-right.pr-2.mr-2.my-1 2 cups - Old Fashioned Oats
										em.d-inline-block.border-right.pr-2.mr-2.my-1 1 tsp - salt
										em.d-inline-block.border-right.pr-2.mr-2.my-1 2 Tbsp - Honey
										em.d-inline-block.border-right.pr-2.mr-2.my-1 Also Note, you can use "na - Tortilla chips, for serving" 

								//Instructions
								.form-group.py-2
									label(for='cr-recipe-instructions').font-weight-medium Instructions
									textarea(rows='6' name="cr-recipe-instructions" placeholder='Step1\nStep2\netc.' required)#cr-recipe-instructions.form-control
									.bg-secondary.p-3.font-size-ms.rounded-bottom
										span.d-inline-block.font-weight-medium.mr-2.my-1 No need to number them.
								.form-group.py-2
									label(for='cr-recipe-notes').font-weight-medium Notes (Optional)
									textarea(rows='4' name="cr-recipe-notes")#cr-recipe-notes.form-control
								.row
									.col-sm-6.form-group
										label(for='cr-recipe-prepTime').font-weight-medium Prep Time
										.input-group
											.input-group-prepend
												span.input-group-text
													i.czi-time
											input(type='text' name="cr-recipe-prepTime")#cr-recipe-prepTime.form-control
										small.form-text.text-muted How long will this take to prep?
									.col-sm-6.form-group
										label(for='cr-recipe-cookTime').font-weight-medium Cook Time
										.input-group
											.input-group-prepend
												span.input-group-text
													i.czi-time
											input(type='text' name="cr-recipe-cookTime")#cr-recipe-cookTime.form-control
										small.form-text.text-muted How long does this need to cook?
								.form-group.pb-2
									label(for='unp-product-name').font-weight-medium Tags
									.row.my-2
										.col-lg-6
											select(id="cr-recipe-tag-select" name='category').form-control.custom-select
												each tag in tags
													option(value=tag.id) #{tag.category + ': ' + tag.name}
										.col-lg-6
											button(type="button").btn.btn-primary#add-tag-btn
												i.czi-lable.mr-2
												| Add Tag
									.row.form-group
										.col-lg-12
											//content
											div(style='min-height: 5rem; background: #FFF').rounded.p-2#tag-container
								.form-group.pb-2
									label(for='cr-recipe-author').font-weight-medium Recipe Author
									.input-group
										.input-group-prepend
											span.input-group-text
												i.czi-user
										input(type='text' name="cr-recipe-author")#cr-recipe-author.form-control
								.form-group.pb-2
									label(for='cr-recipe-link').font-weight-medium Link to external recipe
									.input-group
										.input-group-prepend
											span.input-group-text
												i.czi-link
										input(type='text' name="cr-recipe-link")#cr-recipe-link.form-control
								button#cr-create-recipe-button.btn.btn-primary.btn-block
									i.czi-upload.font-size-lg.mr-2
									| Upload Recipe


	#tag-btn-clone.d-none.btn-group.mr-2.mb-2(role="group", aria-label="First group")
		button(type="button").btn.btn-outline-secondary.btn-sm
			span.tag-name Oven
		button(type="button" onclick="removeTag(this)").btn.btn-outline-secondary.btn-sm.removeTagBtn
			| x
	include ../recipe-partials/toast-generic-success