extends ../partials/layout-docs

//- Override default config variables
append config
  - var pageTitle = 'UI icons (Icon font)'
  - var isNestedFile = true
  - var isCodeHighlighting = true
  
//- Page Content
block content
  .pb-5
    p Cartzilla includes the collection of vector based font icons to use across the website. See the code example below:
    .card.border-0.box-shadow
      .card-header
        ul(role='tablist').nav.nav-tabs.card-header-tabs
          li.nav-item
            a(href='#html' data-toggle='tab' role='tab' aria-controls='html' aria-selected='false').nav-link HTML
          li.nav-item
            a(href='#pug' data-toggle='tab' role='tab' aria-controls='pug' aria-selected='false').nav-link Pug
      .card-body
        .tab-content
          #html.tab-pane.fade.show.active(role='tabpanel')
            pre.line-numbers
              code(class='lang-html').
                &lt;i class=&quot;czi-add-location&quot;&gt;&lt;/i&gt;
          #pug.tab-pane.fade(role='tabpanel')
            pre.line-numbers
              code(class='lang-pug').
                i.czi-add-location
    a(href='../components/icon-font.html' target='_blank' rel='noopener').d-inline-block.pt-4: u You can find the list of all available icons as well as their respective css classes here.
